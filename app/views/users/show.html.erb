<div class="row">
  <aside class="col-md-4">
    <h3>マイページ</h3>      
    <section class="user_info">
    <h5>
    <%= @user.name %>
    </h5>
    <hr>
    </section>
  </aside>
  <div class="row">
  <div class="col-md-8">  
    <%= image_tag @map.image %>
    <br>

    <!--Reward btn-->
    <% if @map.status1 == "t" && @map.status2 == "t" && @map.status3 == "t" && @map.status4 == "t" %>  
    <%= link_to  "Get Reward", reward_path, class: "btn btn-sm btn-warning active" %>
    <% end %>

  
    <% if @map.status1 == "t" %>
     <img class=imgA1 src="/images/stamp1.png">
    <% else %>
     <img class=imgA1 src="/images/blank.jpeg">
     <%= link_to "Get Hint", item_path, class: "btn btn-sm btn-warning" %>
    <% end %>
    <% if @map.status2 == "t" %>
     <img class=imgB1 src="/images/stamp2.png">
    <% else %>
     <img class=imgB1 src="/images/blank.jpeg">
     <%= link_to "Get Hint", item_path, class: "btn btn-sm btn-warning" %>
    <% end %>

    <% if @map.status3 == "t" %>
     <img class=imgC1 src="/images/stamp3.png">
    <% else %>
     <img class=imgC1 src="/images/blank.jpeg">
     <%= link_to "Get Hint", item_path, class: "btn btn-sm btn-warning" %>
    <% end %>
    <% if @map.status4 == "t" %>
     <img class=imgD1 src="/images/stamp4.png">
    <% else %>
     <img class=imgD1 src="/images/blank.jpeg">
     <%= link_to "Get Hint", item_path, class: "btn btn-sm btn-warning" %>
    <% end %>
     
  </div>

  <div class="col-md-4">
  <%= form_for(@user, :url => {:action => 'update'}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %> <!-- エラー表示 -->
    <label for="stampcode" class="control-label col-md-1">CODE:</label>
    <input type="text" name="code", placeholder="popy_0000"></input>
    <%= f.submit "Confirm", class: "btn btn-sm btn-warning" %>
  <% end %>
  <br><br>

  <% if @stamp_all.present? %>
  <% @stamp_all.each do |f| %>
    <%
    # link_to image_tag f.image, stamp_update_user_path
    %>
    <a href='/users/<%= @user.id %>/stamp_update?image=<%= f.image %>'><%= image_tag f.image %></a>
  <% end %>
  <% end %>
  
  </div>
  </div>
</div>


