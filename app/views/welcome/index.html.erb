<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>フフルルポイントマイページ</h1>
      <%= link_to 'popy' , login_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
   </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>

    <%= link_to t("log.sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>